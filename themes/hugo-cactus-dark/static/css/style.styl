    }
}



.coding {
    position: relative;
     .prompt {
        display: block;
        white-space: pre-wrap;
        margin-bottom: .75em;
    }

    .new-output {
        display: inline-block;
    }

    .new-output:after {
        display: inline-block;
        vertical-align: -.15em;
        width: .5em;
        height: 12px;
        margin-left: 5px;
        background: #2bbc8a;
        box-shadow: 0px 0px 0px rgba(31, 240, 66, .65);
        -webkit-animation: cursor-blink 1.25s steps(1) infinite;
        -o-animation: cursor-blink 1.25s steps(1) infinite;
        animation: cursor-blink 1.25s steps(1) infinite;
        content: ''
    }
}

